{
    "scripts": {
        "test": "jest --coverage --silent"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "js/**/*.js",
            "!js/**/*.test.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "json-summary"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "transform": {
            "\\.[jt]sx?$": "babel-jest"
        }
    },
    "dependencies": {
        "@babel/preset-env": "^7.27.2",
        "babel-jest": "^30.0.2",
        "canvas": "^3.1.1",
        "chartjs-plugin-zoom": "^2.2.0",
        "hammerjs": "^2.0.8",
        "jest": "^30.0.2",
        "jest-environment-jsdom": "^30.0.2",
        "js-coverage-badges": "^1.1.1",
        "jspdf": "^4.0.0",
        "jspdf-autotable": "^5.0.2",
        "node-fetch": "^3.3.2",
        "type-detect": "^4.1.0"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
    "devDependencies": {
        "nyc": "^17.1.0"
    },
    "nyc": {
        "extension": [
            ".js"
        ],
        "reporter": [
            "json-summary",
            "lcov",
            "text"
        ],
        "include": [
            "src"
        ],
        "exclude": "**/*.mock.js"
    }
}
