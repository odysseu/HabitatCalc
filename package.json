{
    "scripts": {
        "test": "jest --coverage"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "transform": {
            "\\.[jt]sx?$": "babel-jest"
        }
    },
    "dependencies": {
        "@babel/preset-env": "^7.27.2",
        "babel-jest": "^29.7.0",
        "canvas": "^2.11.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jspdf": "^3.0.1",
        "jspdf-autotable": "^5.0.2",
        "node-fetch": "^3.3.2"
    }
}
